<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MainPage">

    <ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25">
			<Button
                x:Name="LocationsBtn"
                Text="Odpri lokacije" 
                SemanticProperties.Hint="Opens registrations"
                HorizontalOptions="Fill" 
				Clicked="ToLocations"/>

			<Button
                x:Name="RegistrationsBtn"
                Text="Odpri registracije" 
                SemanticProperties.Hint="Opens registrations"
                HorizontalOptions="Fill" 
				Clicked="ToRegistrations"/>
			
		</VerticalStackLayout>
    </ScrollView>

</ContentPage>
